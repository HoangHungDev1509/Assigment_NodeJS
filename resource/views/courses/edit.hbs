<div class="mt-4">
    <h2 style="text-align: center;">CHỈNH SỬA SẢN PHẨM</h2>
    <form class="mt-4"  method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="code" class="form-label">Mã sản phẩm</label>
            <input type="text" class="form-control" value="{{course.code}}" id="code" name="code">
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Giá sản phẩm</label>
            <input type="text" class="form-control" value="{{course.price}}" id="price" name="price">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Màu sắc</label>
            <input type="text" class="form-control" value="{{course.description}}" id="description" name="description">
        </div>
        <div class="form-group">
            <label for="image">Link Ảnh</label>
            <input type="text" class="form-control" value="{{course.image}}" id="image" name="image">
        </div>
        <button type="submit" class="btn btn-success">Cập nhật sản phẩm</button>
    </form>
</div>